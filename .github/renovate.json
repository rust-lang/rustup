{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "prCreation": "not-pending",
    "rangeStrategy": "replace",
    "stabilityDays": 3,
    "github-actions": {
        "fileMatch": [
            "^ci\\/.*/[^/]+\\.ya?ml$"
        ]
    },
    "packageRules": [
        {
            "matchPackagePatterns": [
                "opentelemetry"
            ],
            "groupName": "opentelemetry"
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "matchCurrentVersion": "/^0\\./",
            "automerge": true
        }
    ]
}